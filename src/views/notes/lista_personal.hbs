<a href="javascript:history.back()" class="btn btn-danger m-3">Volver</a>
<table class="table table-dark table-striped">

    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Nombre</th>
            <th scope="col">Fecha de ingreso</th>
            <th scope="col">Estatus</th>
            <th scope="col">Operacion</th>
        </tr>
    </thead>

    <tbody>

        {{#each user}}

        <tr>
            <th scope="row">{{@index}}</th>
            <td>
                <input type="text" class="form-control" name="title" value="{{name}}" readonly>
            </td>
            <td>
                <input type="text" class="form-control" name="title" value="{{createdAt}}" readonly>
            </td>
            <td>{{#if status}}
                    <input type="text" class="form-control" name="title" value="Activo" readonly>
                {{else}}
                    <input type="text" class="form-control" name="title" value="Inactivo" readonly>
                {{/if}}
            </td>
            <td>

                <a href="/personal/info/{{_id}}" class="btn btn-primary btn-block btn-sm">Ver perfil</a>
                <a href="/personal/notes/{{_id}}" class="btn btn-light btn-block btn-sm">Ver notas</a>
                {{#if status}}
                    <a href="/personal/toogleStatus/{{_id}}" class="btn btn-danger btn-block btn-sm">Dar de baja</a>
                {{else}}
                    <a href="/personal/toogleStatus/{{_id}}" class="btn btn-success btn-block btn-sm">Dar de alta</a>
                {{/if}}
            </td>
        </tr>

        {{/each}}

    </tbody>

</table>