<div class="container">
    <div class="row">
        <div class="col-3">
        </div>
        <div class="col-5">
            <h2 style="color: #FFFFFF">DATOS ACADEMICOS</h2>
        </div>
        <div class="col-4">
            <a href="/rol" class="btn btn-success btn-sm m-3 ">Regresar</a>
            <a href="/dato/AllDatos" class="btn btn-success btn-sm m-3">Agregar</a>
        </div>
    </div>


    <table class="table table-dark table-striped">

        <thead>
            <tr>
                <th scope="col">N.</th>
                <th scope="col">Titulo</th>
                <th scope="col">Institucion</th>
                <th scope="col">Pais</th>
                <th scope="col">Fecha de obtencion</th>
                <th scope="col">Acciones</th>
            </tr>
        </thead>

        <tbody>

            {{#each academicos}}

            <tr>
                <th scope="row">{{@index}}</th>
                <td>
                    {{tipo}}
                </td>

                <td>
                    {{institucion}}
                </td>

                <td>
                    {{pais}}
                </td>

                <td>
                    {{fecha_inicio}}
                </td>

                <td>
                    <a href="#" class="btn btn-primary btn-block btn-sm">Editar</a>
                    <a href="#" class="btn btn-light btn-block btn-sm">Eliminar</a>
                </td>
            </tr>

            {{/each}}

        </tbody>

    </table>
</div>