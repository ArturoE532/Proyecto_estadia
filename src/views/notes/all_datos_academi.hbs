<div class="jumbotron mt-4">
    <h1 class="display-4">Datos Academicos</h1>
    <h1 class="display-6">del Mtro. {{user.value}}</h1>
    <hr class="my-4">

    <div class="container">
        <div class="row">
            <div class="col-3"></div>

            <div class="col-6 ">

                <form action="/notes/newacademico" method="POST">
                    <div class="mb-3">
                        <select class="form-select form-control" aria-label="Default select example" value="tipo"
                            value="{{tipo}}" name="tipo">
                            <option value="" class="">-- Selecciona una opción --</option>
                            <option value="Licenciatura" label="Licenciatura">Licenciatura</option>
                            <option value="Especialidad" label="Especialidad">Especialidad</option>
                            <option value="Maestría" label="Maestría">Maestría</option>
                            <option value="Doctorado" label="Doctorado">Doctorado</option>
                            <option value="Pos Doctorado" label="Pos Doctorado">Pos Doctorado</option>
                        </select>
                    </div>

                    <div class="mb-3">
                        <label class="form-label"> <strong> Nombre de la Carrera:</strong></label>
                        <input type="text" class="form-control" value="{{carrera}}" name="carrera">
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Nombre de la Institución:</label>
                        <input type="text" class="form-control" value="{{institucion}}" name="institucion">
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Fecha de inicio:</label>
                        <input type="date" class="form-control" value="{{fecha_inicio}}" name="fecha_inicio">
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Fecha de Termino:</label>
                        <input type="date" class="form-control" value="{{fecha_termino}}" name="fecha_termino">
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Pais:</label>
                        <input type="text" class="form-control" value="{{pais}}" name="pais">
                    </div>

                    <div class="d-grid gap-2 d-md-block">
                        <button class="btn btn-primary btn-block">
                            Guardar
                        </button>
                        <a href="javascript:history.back()" class="btn btn-danger btn-block">Volver</a>
                    </div>
                </form>
            </div>

            <div class="col-3"></div>

        </div>
    </div>
</div>