<div class="container">
    <div class="row">
        <div class="col-4"></div>
        <h2 style="color: #FFFFFF">Experiencia Laboral</h2>
        
        <div class="col-4"></div>
    </div>
</div>
<br>


<table class="table table-dark table-striped">

    <thead>
        <tr>

            <th scope="col">Puesto Desem.</th>
            <th scope="col">Institucion</th>
            <th scope="col">Fecha de Inicio</th>
            <th scope="col">Fecha Fin</th>
            <th scope="col">Empleo Actual</th>
            <th scope="col">Acciones</th>
        </tr>
    </thead>

    <tbody>

        {{#each user}}

        <tr>
            <th scope="row">{{@index}}</th>
            <td>
                <input type="text" class="form-control" name="title" value="{{name}}" readonly>
            </td>
            <td>
                <input type="text" class="form-control" name="title" value="{{createdAt}}" readonly>
            </td>
            <td>{{#if status}}
                <input type="text" class="form-control" name="title" value="Activo" readonly>
                {{else}}
                <input type="text" class="form-control" name="title" value="Inactivo" readonly>
                {{/if}}
            </td>
            <td>

                <a href="/personal/info/{{_id}}" class="btn btn-primary btn-block btn-sm">Ver perfil</a>

            </td>
            <td>

                <a href="/personal/info/{{_id}}" class="btn btn-primary btn-block btn-sm">Editar</a>

                {{#if status}}
                <a href="/personal/toogleStatus/{{_id}}" class="btn btn-danger btn-block btn-sm">Eliminar</a>
                {{else}}
                <a href="/personal/toogleStatus/{{_id}}" class="btn btn-success btn-block btn-sm">Eliminar</a>
                {{/if}}
            </td>
        </tr>

        {{/each}}

    </tbody>

</table>
<br>
<br>
<div class="container">
    <div class="row">
        <div class="col-4"></div>
        <div class="col-2"><a href="javascript:history.back()" class="btn btn-success m-3 ">Regresar</a></div>
        <div class="col-2"><a href="/maestro/AllExperie" class="btn btn-success btn-block m-3">Agregar</a></div>
    </div>
    <div class="col-4"></div>
</div>
</div>