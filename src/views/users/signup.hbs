<div class="row">
    <div class="col-md-4 mx-auto">
        <div class="card">
            <div class="card-header">
                Account Register
            </div>
            <div class="card-body">
                <form action="/users/signup" method="POST">
                    <div class="form-group">
                        <input type="text" class="form-control" name="name" placeholder="Nombre" value="{{name}}">
                    </div>
                    <div class="form-group">
                        <input type="email" class="form-control" name="email" placeholder="E-mail" value="{{email}}">
                    </div>
                    <div class="form-group">
                        <input type="password" class="form-control" name="password" placeholder="Constraseña"
                            value="{{password}}">
                    </div>
                    <div class="form-group">
                        <input type="password" class="form-control" name="confirm_password"
                            placeholder="Confirmar Constraseña" value="{{confirm_password}}">
                    </div>
                    <div class="form-group">
                        <select class="form-select form-control" aria-label="Default select example" name="rango"
                            value="{{rango}}">
                            <option selected>Seleccionar el Rango:</option>
                            <option value="Maestro">Maestro</option>
                            <option value="Director">Direcctor</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <select class="form-select form-control" aria-label="Default select example" name="nivelA"
                            value="{{nivelA}}">
                            <option selected>Seleccionar el Nivel Academico:</option>
                            <option value="A">A</option>
                            <option value="B">B</option>
                            <option value="C">C</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <select class="form-select form-control" aria-label="Default select example" name="nivelI"
                            value="{{nivelI}}">
                            <option selected>Seleccionar el Nivel Investigacion:</option>
                            <option value="A">A</option>
                            <option value="B">B</option>
                            <option value="C">C</option>
                        </select>
                    </div>
                    <button class="btn btn-primary btn-block">
                        Sing Up
                    </button>

                    <a href="javascript:history.back()" class="btn btn-danger btn-block">Volver</a>
                </form>
            </div>
        </div>
    </div>
</div>